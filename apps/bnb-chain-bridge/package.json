{
  "name": "bnb-chain-bridge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch server/index.ts",
    "build": "tsc --project tsconfig.server.json && tsc-alias && next build",
    "start": "NODE_ENV=production node dist/index.js",
    "lint": "eslint './**/*.{ts,tsx}'",
    "lint-staged": "lint-staged",
    "config:token-icons": "tsx __scripts__/token-icons/index.ts",
    "config:chain-icons": "tsx __scripts__/chain-icons/index.ts",
    "config:chain-info": "tsx __scripts__/chain-info/index.ts"
  },
  "dependencies": {
    "@bnb-chain/icons": "workspace:*",
    "@bnb-chain/space": "workspace:*",
    "@emotion/react": "~11.13.0",
    "@emotion/styled": "~11.13.0",
    "@node-real/walletkit": "1.1.3",
    "@reduxjs/toolkit": "~2.2.5",
    "@tanstack/react-query": "~5.36.0",
    "@wagmi/core": "~1.4.13",
    "accept-language-parser": "~1.5.0",
    "axios": "~1.6.8",
    "compression": "~1.7.4",
    "dot-prop-immutable-chain": "~0.0.3",
    "ethers": "^5.7.2",
    "express": "~4.19.2",
    "express-prom-bundle": "~7.0.0",
    "google-protobuf": "~3.21.2",
    "lit-html": "~3.1.4",
    "lodash": "~4.17.21",
    "next": "14.1.1",
    "next-redux-wrapper": "~8.1.0",
    "next-seo": "~6.5.0",
    "pino-pretty": "~11.2.1",
    "polished": "~4.3.1",
    "prom-client": "~15.1.2",
    "rc-virtual-list": "~3.14.5",
    "react": "^18",
    "react-dom": "^18",
    "react-redux": "~9.1.2",
    "viem": "~2.0.0",
    "wagmi": "~1.4.13"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": ">=7.1.6 <8.0.0-0",
    "@bnb-chain/eslint-config": "workspace:*",
    "@bnb-chain/prettier-config": "workspace:*",
    "@types/accept-language-parser": "~1.5.6",
    "@types/compression": "~1.7.5",
    "@types/download": "~8.0.5",
    "@types/express": "~4.17.21",
    "@types/lodash": "~4.17.7",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/sharp": "0.31.1",
    "cheerio": "~1.0.0-rc.12",
    "cross-fetch": "^3.1.5",
    "download": "~8.0.0",
    "eslint": "^8.8.0",
    "eslint-config-next": "14.2.3",
    "i18next": ">= 23.2.3",
    "lint-staged": "~13.0.3",
    "p-queue": "~8.0.1",
    "prettier": "~2.7.1",
    "react-i18next": "^13.2.2",
    "react-is": "~18.3.1",
    "react-native": "*",
    "sharp": "~0.31.2",
    "tsc-alias": "~1.8.10",
    "tsx": "~4.15.7",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@bnb-chain/eslint-config/next"
    ],
    "rules": {
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-empty-interface": "off"
    }
  },
  "prettier": "@bnb-chain/prettier-config"
}
