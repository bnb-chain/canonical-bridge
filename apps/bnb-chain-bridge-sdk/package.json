{
  "name": "@bnb-chain/bridge-sdk",
  "version": "1.0.0",
  "description": "bnb chain bridge aggregator sdk",
  "author": "bnb-chain",
  "private": false,
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bnb-chain/multichain-bridge.git",
    "directory": "packages/bridge-sdk"
  },
  "keywords": [
    "bridge",
    "ethereum",
    "cBridge",
    "deBridge",
    "stargate"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite __dev__ --config vite.config.ts --port 3333 --host 0.0.0.0 --open",
    "build:watch": "vite build --watch --emptyOutDir=false",
    "build": "vite build"
  },
  "dependencies": {
    "@ethersproject/abstract-provider": "^5.7.0",
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/transactions": "^5.7.0",
    "axios": "~0.27.2",
    "viem": "~2.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "typescript": "^5",
    "vite": "^4.5.0",
    "vite-plugin-dts": "^3.6.3",
    "react": "^18",
    "react-dom": "^18",
    "@types/react": "^18",
    "@types/react-dom": "^18"
  },
  "eslintConfig": {
    "extends": [
      "@bnb-chain/eslint-config/next"
    ],
    "rules": {
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-empty-interface": "off"
    }
  }
}
