{
  "name": "multichain-bridge",
  "version": "0.0.0",
  "author": "bnb-chain",
  "private": true,
  "packageManager": "pnpm@9.1.1",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "lint": "pnpm eslint .",
    "dev": "pnpm --F @bnb-chain/bridge-sdk dev",
    "build": "pnpm --F @bnb-chain/* build",
    "ci:enter": "pnpm changeset pre enter alpha || true",
    "ci:exit": "pnpm changeset pre exit || true",
    "ci:publish": "pnpm changeset publish",
    "ci:alpha-version": "pnpm ci:enter && pnpm ci:version",
    "ci:stable-version": "pnpm ci:exit && pnpm ci:version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.3.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  }
}
